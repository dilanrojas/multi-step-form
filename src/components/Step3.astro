    <div class="add-on-card customizable-profile-card">
      <div class="checkbox-wrapper">
        <input id="customizable-profile-checkbox" type="checkbox">
      </div>
      <div class="add-on-content">
        <h1>Customizable profile</h1>
        <p>Custom theme on your profile</p>
      </div>
      <div class="add-on-price-wrapper">
        <p>+</p>
        <span class="customizable-profile-price"></span>
