    <p>Add-ons help enhance your gaming experience</p>
  </div>
  <div class="step-main">
    <div class="add-on-card online-service-card">
      <div class="checkbox-wrapper">
        <input id="online-checkbox" type="checkbox">
      </div>
      <div class="add-on-content">
        <h1>Online service</h1>
        <p>Access to multiplayer games</p>
      </div>
      <div class="add-on-price-wrapper">
        <p>+</p>
        <span class="online-service-price"></span>
      </div>
    </div>
    <div class="add-on-card larger-storage-card">
      <div class="checkbox-wrapper">
        <input id="larger-storage-checkbox" type="checkbox">
      </div>
      <div class="add-on-content">
        <h1>Larger storage</h1>
        <p>Extra 1TB of cloud save</p>
      </div>
      <div class="add-on-price-wrapper">
        <p>+</p>
        <span class="larger-storage-price"></span>
      </div>
