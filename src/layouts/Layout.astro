---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/png" href="/favicon.png" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
	@import url('https://fonts.googleapis.com/css2?family=Ubuntu:ital,wght@0,300;0,400;0,500;0,700;1,300;1,400;1,500;1,700&display=swap');

	:root {
		--marine-blue: hsl(213, 96%, 18%);
		--purplish-blue: hsl(243, 100%, 62%);
		--pastel-blue: hsl(228, 100%, 84%);
		--light-blue: hsl(206, 94%, 87%);
		--strawberry-red: hsl(354, 84%, 57%);
		--lime: hsl(132, 84%, 57%);
		--cool-gray: hsl(231, 11%, 63%);
		--light-gray: hsl(229, 24%, 87%);
		--magnolia: hsl(217, 100%, 97%);
		--alabaster: hsl(230, 75%, 98%);
		--white: hsl(0, 0%, 100%);

		--accent: hsl(245, 32%, 45%);
		--dark: hsl(0, 0%, 5%);
		--darker: hsl(225, 4%, 65%);
		--txt-secondary: var(--light-gray);

		--ff-html: "Ubuntu", sans-serif;
	}

	@keyframes fadeOut {
		0% {
			opacity: 1;
		}
		100% {
			opacity: 0;
		}
	}

	@keyframes fadeIn {
		0% {
			opacity: 0;
		}
		100% {
			opacity: 1;
		}
	}

	@keyframes slideDownOut {
		0% {
			opacity: 1;
		}
		40% {
			opacity: 0;
		}
		100% {
			transform: translateY(150px);
			opacity: 0;
		}
	}

	@keyframes slideDownIn {
		0% {
			transform: translateY(-150px);
			opacity: 0;
		}
		60% {
			opacity: 0;
		}
		100% {
			transform: translateY(0px);
			opacity: 1;
		}
	}

	@keyframes slideUpOut {
		0% {
			opacity: 1;
		}
		40% {
			opacity: 0;
		}
		100% {
			transform: translateY(-150px);
			opacity: 0;
		}
	}

	@keyframes slideUpIn {
		0% {
			opacity: 0;
			transform: translateY(150px);
		}
		60% {
			opacity: 0;
		}
		100% {
			transform: translateY(0px);
			opacity: 1
		}
	}

	* {
		margin: 0;
		padding: 0;
	}

	*,
	*::before,
	*::after {
		box-sizing: border-box;
	}

	h1, h2, h3, h4, h5, h6 {
		line-height: 1;
	}

	a {
		text-decoration: none;
		color: currentColor
	}

	ul,
	ol {
		list-style: none;
	}

	button,
	textarea,
	input {
		font-size: inherit;
		font-family: inherit;
	}

	html {
		font-family: var(--ff-html);
		font-size: 16px;
		line-height: 1.3;
	}

	body {
		display: flex;
		align-items: center;
		justify-content: center;
		min-height: 100dvh;
		background-color: var(--magnolia);
		position: relative;
	}

	/* Contents */
	.active-page {
		width: 28em;
		display: flex!important;
		flex-direction: column;
	}

	@media(width <= 780px) {
		.active-page {
			width: 410px;
			height: 410px;
			overflow: auto;
			scrollbar-width: none;
		}
	}

	@media(width <= 520px) {
		.active-page {
			width: auto;
		}
	}

	/* Utility classes */
	.container {
		--width: 1200px;
		--padding: 1rem;

		width: min(var(--width), 100% - (var(--padding) * 2));
		margin-inline: 1em;
	}

	.flow > * + * {
		margin-top: var(--flow-space, 1em)
	}

	button[disabled] {
		pointer-events: none;
		opacity: .8;
		transition: opacity .5s ease;
	}
</style>
